<?xml version="1.0" encoding="utf-8"?>

<!-- Customized by MS -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/childName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/rv_item_buy_completed_products_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:text="싱그러운 영동 사과" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rv_item_buy_completed_products_name">

            <TextView
                android:id="@+id/rv_item_buy_completed_products_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/rv_item_buy_completed_products_price_won"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:textColor="#46AE7F"
                android:textSize="16dp"
                android:text="1000" />

            <TextView
                android:id="@+id/rv_item_buy_completed_products_price_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:textColor="#46AE7F"
                android:textSize="16dp"
                android:text="원" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>