<?xml version="1.0" encoding="utf-8"?>

<!--민승-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rv_item_buy_completed_products_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/rv_item_buy_completed_products_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:textColor="#3A3A3A"
            android:textSize="22dp"
            android:text="싱그러운 영동 사과" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rv_item_buy_completed_products_name">

            <TextView
                android:id="@+id/rv_item_buy_completed_products_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/rv_item_buy_completed_products_price_won"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:textColor="#46AE7F"
                android:textSize="22dp"
                android:text="1000" />

            <TextView
                android:id="@+id/rv_item_buy_completed_products_price_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/nanumbarungothic_normal"
                android:textColor="#46AE7F"
                android:textSize="22dp"
                android:text="원" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>