<?xml version="1.0" encoding="utf-8"?>

<!--민승-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    tools:context=".MypageProfileActivity">

    <!--상단-->
    <RelativeLayout
        android:id="@+id/mypage_profile_act_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ECECEC">

        <RelativeLayout
            android:id="@+id/mypage_profile_act_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="?android:selectableItemBackground"
            android:padding="6dp">

            <!--뒤로 가기 버튼-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/purchaseview_previousarrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothicbold_normal"
            android:text="정보 수정"
            android:textColor="#3A3A3A"
            android:textSize="24dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/mypage_profile_act_toolbar"
        android:background="#BDBDBD" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignTop="@id/mypage_profile_act_bottom_btn"
        android:background="#D8D8D8" />

    <!--하단-->
    <RelativeLayout
        android:id="@+id/mypage_profile_act_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nanumbarungothic_normal"
            android:text="legal v. 3.369.100001"
            android:textColor="#A0A0A0"
            android:textSize="13dp" />

    </RelativeLayout>

    <!--마이페이지-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mypage_profile_act_toolbar"
        android:orientation="vertical"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <RelativeLayout
                android:id="@+id/mypage_profile_act_user_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp">

                <RelativeLayout
                    android:id="@+id/mypage_profile_act_user_profile_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/mypage_profile_act_user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="0dp"
                        android:src="@drawable/editprofile_basicprofile" />

                    <ImageView
                        android:id="@+id/mypage_act_user_profile_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/mypage_profile_act_user_profile"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/editprofile_edit" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D8D8D8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <EditText
                        android:id="@+id/mypage_act_buy_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@null"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:text="이름을 입력하세요."
                        android:textColor="#C6C6C6"
                        android:textSize="22dp" />


                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/mypage_act_buy_list"
                        android:layout_centerHorizontal="true"
                        android:background="#D8D8D8" />

                    <EditText
                        android:id="@+id/mypage_act_FAQ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_act_buy_list"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@null"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:text="휴대폰 번호를 입력하세요."
                        android:textColor="#C6C6C6"
                        android:textSize="22dp" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/mypage_act_FAQ"
                        android:layout_centerHorizontal="true"
                        android:background="#D8D8D8" />

                    <EditText
                        android:id="@+id/mypage_act_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mypage_act_FAQ"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@null"
                        android:fontFamily="@font/nanumbarungothicbold_normal"
                        android:text="생년월일을 입력하세요."
                        android:textColor="#C6C6C6"
                        android:textSize="22dp" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/mypage_act_contact"
                        android:layout_centerHorizontal="true"
                        android:background="#D8D8D8" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>